<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_angka_pertama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="angka pertama"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.031"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.37" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/angka_kedua"
        android:layout_margin="16dp"
        android:hint="angka kedua"
        app:layout_constraintTop_toBottomOf="@id/et_angka_pertama" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_result"
        android:text="Hitung"
        app:layout_constraintTop_toBottomOf="@id/angka_kedua"
        app:layout_constraintStart_toStartOf="@id/angka_kedua"
        app:layout_constraintEnd_toEndOf="@id/angka_kedua"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_show"
        android:layout_margin="16dp"
        android:text="show"
        app:layout_constraintTop_toBottomOf="@id/btn_result"
        app:layout_constraintStart_toStartOf="@id/btn_result"
        app:layout_constraintEnd_toEndOf="@id/btn_result"/>

</androidx.constraintlayout.widget.ConstraintLayout>